<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lopez_labquiz2.MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tvFamousQuotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="cursive"
        android:text="Famous Quotes"
        android:textAllCaps="false"
        android:textColor="#1995ad"
        android:textSize="39sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFamousQuotes"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Author: "
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvAuthor"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAuthor"
        android:layout_marginLeft="20dp"
        android:text="Quote: "
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etQuote"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvQuote"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etQuote"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#1995ad"
        android:onClick="SaveData"
        android:text="SAVE"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etQuote"
        android:layout_toRightOf="@id/btSave"
        android:backgroundTint="#1995ad"
        android:onClick="NextPage"
        android:text="NEXT"
        android:textColor="@android:color/white" />

</RelativeLayout>
